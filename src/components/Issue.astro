---
const { issueNo, pubMonth, pubYear } = Astro.props;
---

<div class="col-md-6 col-lg-3">
  <div class="d-flex flex-column-reverse section-card">
    <a href={issueNo} class="text-decoration-none issue-info-parent z-0">
      <div class="issue-info pt-3 pb-4 px-4 d-flex justify-content-between align-items-center">
        <h6>Issue {issueNo} <span>{pubMonth} {pubYear}</span></h6>
        <i class="fas fa-angle-right"></i>
      </div>
    </a>
    <a href={issueNo} class="z-1"><img src={`../../images/issues/issue${issueNo}/snap.png`} class="img-fluid rounded-3" /></a>
  </div>
</div>

<style>
  img {
    transition: 0.3s;
    box-shadow: 0px 0px 40px #ddd;
  }

  img:hover {
    transform: scale(1.1);
    box-shadow: 0px 0px 50px #ddd;
  }

  a.issue-info-parent:hover ~ a img {
    transform: scale(1.03);
    box-shadow: 0px 0px 50px #ddd;
  }

  .issue-info {
    width: 95%;
    margin: 0 auto;
    border-radius: 0 0px 10px 10px;
    background-color: rgba(238, 238, 238, 0.7);
  }

  h6 {
    font-size: 25px;
    margin-bottom: -5px;
    font-weight: 700;
    color: #000;
  }

  span {
    font-size: 11px;
    font-weight: 600;
    color: #bbb;
  }

  i {
    position: relative;
    font-size: 21px;
    right: -174px;
    color: #000;
    top: -15px;
  }
</style>
